@using app.Models.ViewModels;


<div>
    <form asp-controller="home" asp-action="followup">
        <div>
            <input type="hidden" name="id" value="@ViewBag.Id" />
            
        </div>
        <div class="form-group">
            <textarea name="comment" cols="5" maxlength="400" class="form-control" required></textarea>

        </div>
        <button class="btn btn-success">Comment</button>

    </form>
</div>

<div class="mt-5">
<span class="btn-toolbar"> Comments</span>
</div>

@foreach (var i in ViewBag.Data as IList<BookingFollowUp>)
{


<div class="card" >
    <div class="card-header">
        @if (i.c_to_p)
        {
            <h6>By :Consumer</h6>
        }
        else
        {
            <h6>By :Provider</h6>
        }  
    </div>
                
<div class="card-body">
    <p>@i.comment</p>
</div>
     
<div class="card-footer">
    <p>@i.on_datetime.ToShortTimeString()</p>
</div>
    
</div>

}

