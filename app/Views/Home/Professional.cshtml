       var app = new Vue({
           el: "#app",
        data: {

            servicebook: {
                provider_id:@Model.UserId,
            service_id:null,
            request_datetime:null,
            instruction:null
           }
        },
       mounted(){

       },
       methods: {
            book() {
            this.servicebook.service_id = 0;
            var data =JSON.parse(JSON.stringify(this.servicebook))
              axios.post('/api/booking/book',data)
              .then(data=>{
