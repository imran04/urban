@model app.Models.ViewModels.Users


@{
    Layout = "_IndexV2Layout";
}
@section head{
<div class="wt-haslayout wt-innerbannerholder">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-xs-12 col-sm-12 col-md-8 push-md-2 col-lg-6 push-lg-3">
                <div class="wt-innerbannercontent">
                    <div class="wt-title"><h2>Register</h2></div>
                </div>
            </div>
        </div>
    </div>
</div>
}

<div class="wt-haslayout wt-main-section">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-xs-12 col-sm-12 col-md-10 push-md-1 col-lg-8 push-lg-2">
                <div class="wt-registerformhold">
                    <div class="wt-registerformmain">
                        <div class="wt-registerhead">
                            <div class="wt-title">
                                <h3>Register</h3>
                            </div>

                        </div>
                        <div class="wt-joinforms">

                            <form class="wt-formtheme wt-formregister" method="post">
                                <fieldset class="wt-registerformgroup">
                                    @Html.ValidationSummary()
                                    <div class="form-group ">
                                        <label asp-for="type">User Type</label>
                                        <select asp-for="type" name="type" class="form-control">
                                            <option value="0">Consumer</option>
                                            <option value="1">Service Provider</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="username">User Name *</label>
                                        <input asp-for="username" name="username" class="form-control" placeholder="Username" type="text"> 
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="emailid">Email id *</label>
                                        <input asp-for="emailid" name="emailid" class="form-control" placeholder="Email" type="email">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="mobile">Mobile *</label>
                                        <input asp-for="mobile" name="mobile" class="form-control" placeholder="mobile" type="text">
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="password">Password</label>
                                        <input class="form-control" asp-for="password" name="password" placeholder="Password" type="password" v-model="register.password">
                                        @Html.ValidationMessageFor(o => Model.password)
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="address">Address</label>
                                        <textarea class="form-control" asp-for="address" name="address" v-model="register.address"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <button class="wt-btn">Register</button>
                                    </div>
                                </fieldset>
                            </form>
                            
                        </div>
                    </div>
                    <div class="wt-registerformfooter">
                        <span>Already Have an Account? <a href="/Account/Login">Login Now</a></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>