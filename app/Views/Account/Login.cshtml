<div class="wt-haslayout wt-main-section">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-xs-12 col-sm-12 col-md-10 push-md-1 col-lg-8 push-lg-2">
                <div class="wt-registerformhold">
                    <div class="wt-registerformmain">
                        <div class="wt-registerhead">
                            <div class="wt-title">
                                <h3>Login</h3>
                            </div>
                            
                        </div>
                        <div class="wt-joinforms">
                            
                            <form class="wt-formtheme wt-formregister" method="post">
                                <fieldset class="wt-registerformgroup">
                                    @Html.ValidationSummary()
                                    <div class="form-group ">
                                        <input type="text" asp-for="UserName" name="UserName" class="form-control" placeholder="Username">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" asp-for="Password" name="password" class="form-control" placeholder="Password">
                                    </div>
                                    <div class="form-group">
                                        <button  class="wt-btn">Login</button>
                                    </div>
                                </fieldset>
                            </form>
